<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:padding="16dp">

    <ImageView
        android:src="@drawable/android_logo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.2"/>
    <ImageView
        android:id="@+id/google_image"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/google_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_marginTop="16dp"
        android:textSize="40sp"
        android:textColor="@color/black"
        android:id="@+id/tv_details"
        app:layout_constraintTop_toBottomOf="@+id/google_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/google_details"/>
    <TextView
        android:drawablePadding="16dp"
        android:layout_marginTop="16dp"
        android:textSize="40sp"
        android:textColor="@color/black"
        android:drawableStart="@drawable/city"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/google_address"
        app:layout_constraintTop_toBottomOf="@+id/tv_details"/>
    <TextView
        android:drawablePadding="16dp"
        android:layout_marginTop="16dp"
        android:textSize="40sp"
        android:textColor="@color/blue"
        android:drawableStart="@drawable/kwkb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_address"
        android:text="@string/google_link"
        android:id="@+id/tv_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>